rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User call history subcollection
    match /users/{userId}/callHistory/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Calls collection - both caller and receiver can access
    match /calls/{callId} {
      allow read, write: if request.auth != null &&
        (resource.data.callerId == request.auth.uid ||
         resource.data.receiverId == request.auth.uid);
    }

    // Chat rooms
    match /chat_rooms/{roomId} {
      allow read, write: if request.auth != null;
    }

    // Allow all operations for development - replace with proper rules for production
    match /{document=**} {
      allow read, write: if true;
    }
  }
}